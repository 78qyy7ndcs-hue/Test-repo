<body>
  <h1>AI-armband ‚Äì texttest</h1>
  <p>
    1. Tryck i rutan nedan<br>
    2. Tryck p√• <b>mikrofonen p√• iPhone-tangentbordet</b><br>
    3. S√§g t.ex:<br>
    <i>"Vi har prov p√• s√∂ndag"</i><br>
    <i>"P√•minn mig att plugga matte imorgon klockan sju"</i><br>
    <i>"Har du fixat vattenl√§ckan √§n?"</i><br>
    4. Tryck <b>Tolka</b>
  </p>

  <textarea id="inputText" placeholder="Prata med mik-knappen, eller skriv h√§r..."></textarea>
  <br>
  <button id="parseBtn">üß† Tolka</button>
  <button id="clearBtn">üßπ Rensa f√§lt</button>
  <div id="status">Status: skriv eller prata in texten, tryck sedan Tolka.</div>

  <h2>Senaste tolkningar</h2>
  <div id="log"></div>

  <h2>Sparade p√•minnelser</h2>
  <div id="reminders">Inga sparade √§n.</div>

  <script>
    const statusEl = document.getElementById('status');
    const logEl = document.getElementById('log');
    const remEl = document.getElementById('reminders');
    const parseBtn = document.getElementById('parseBtn');
    const clearBtn = document.getElementById('clearBtn');
    const inputText = document.getElementById('inputText');

    let reminders = [];

    function cleanText(text) {
      let t = text.toLowerCase();
      t = t.replace(/\bass√•\b/g, ' ');
      t = t.replace(/\btyp\b/g, ' ');
      t = t.replace(/\blik(a|som)\b/g, ' ');
      t = t.replace(/\bba\b/g, ' ');
      t = t.replace(/\s+/g, ' ');
      return t.trim();
    }

    function addLog(text, parsed) {
      const div = document.createElement('div');
      div.className = 'entry';

      const confClass = parsed && parsed.s√§kerhet < 0.4 ? 'pill pill-low' : 'pill';
      const typClass = parsed && parsed.typ ? `pill ${parsed.typ}` : 'pill pill-low';

      let html = `<div><span class="label">Text:</span> "${text}"</div>`;
      if (parsed) {
        html += `<div>`;
        if (parsed.typ) {
          html += `<span class="${typClass}">${parsed.typ}</span>`;
        } else {
          html += `<span class="${confClass}">oklar</span>`;
        }
        html += `<span class="${confClass}">s√§kerhet ${(parsed.s√§kerhet * 100).toFixed(0)}%</span>`;
        html += `</div>`;
        html += `<div class="json">${JSON.stringify(parsed, null, 2)}</div>`;
        const disabled = !parsed.typ ? 'disabled' : '';
        html += `<button class="small-btn" ${disabled}>Spara som p√•minnelse</button>`;
      }

      div.innerHTML = html;
      if (parsed && parsed.typ) {
        const btn = div.querySelector('button.small-btn');
        btn.addEventListener('click', () => {
          saveReminder(parsed);
          btn.disabled = true;
          btn.textContent = 'Sparad ‚úÖ';
        });
      }
      logEl.prepend(div);
    }

    function renderReminders() {
      if (!reminders.length) {
        remEl.textContent = 'Inga sparade √§n.';
        return;
      }
      remEl.innerHTML = '';
      reminders.forEach(r => {
        const row = document.createElement('div');
        row.className = 'rem-row';
        row.innerHTML = `
          <div class="rem-title">${r.titel || r.r√•Text}</div>
          <div class="rem-meta">
            Typ: ${r.typ || 'ok√§nd'}
            ${r.dag ? ' ‚Ä¢ Dag: ' + r.dag : ''}
            ${r.tidsinfo ? ' ‚Ä¢ Tid: ' + r.tidsinfo : ''}
          </div>
        `;
        remEl.appendChild(row);
      });
    }

    function saveReminder(parsed) {
      reminders.push(parsed);
      renderReminders();
    }

    function parseReminder(text) {
      const lower = cleanText(text);
      const result = {
        r√•Text: text,
        typ: null,
        titel: null,
        dag: null,
        tidsinfo: null,
        s√§kerhet: 0.0
      };

      let score = 0;

      const dagar = ['m√•ndag','tisdag','onsdag','torsdag','fredag','l√∂rdag','s√∂ndag'];
      for (const d of dagar) {
        if (lower.includes(d)) {
          result.dag = d;
          score += 0.2;
          break;
        }
      }

      if (lower.includes('imorgon') || lower.includes('i morgon')) {
        result.tidsinfo = (result.tidsinfo ? result.tidsinfo + ' ' : '') + 'imorgon';
        score += 0.2;
      } else if (lower.includes('idag')) {
        result.tidsinfo = (result.tidsinfo ? result.tidsinfo + ' ' : '') + 'idag';
        score += 0.1;
      } else if (lower.includes('ikv√§ll')) {
        result.tidsinfo = (result.tidsinfo ? result.tidsinfo + ' ' : '') + 'ikv√§ll';
        score += 0.15;
      }

      const klockMatch = lower.match(/klockan\s+([0-9]{1,2}(:[0-9]{2})?)/);
      if (klockMatch) {
        result.tidsinfo = (result.tidsinfo ? result.tidsinfo + ' ' : '') + ('klockan ' + klockMatch[1]);
        score += 0.25;
      }

      if (lower.startsWith('har du') && (lower.includes('√§n') || lower.includes('klart'))) {
        result.typ = 'todo';
        const middle = lower.replace('har du', '').split('√§n')[0].split('klart')[0].trim();
        result.titel = middle || text;
        score += 0.4;
      }

      if (/(prov|l√§xa|l√§xan|tr√§ning|match|jobb|m√∂te)/.test(lower)) {
        result.typ = result.typ || 'event';
        if (!result.titel) {
          const provMatch = lower.match(/vi har (.+?) (p√•|imorgon|i morgon|idag)/);
          if (provMatch) {
            result.titel = provMatch[1].trim();
          } else {
            result.titel = text;
          }
        }
        score += 0.3;
      }

      if (lower.includes('p√•minn mig att')) {
        result.typ = 'todo';
        const parts = lower.split('p√•minn mig att');
        result.titel = (parts[1] || '').trim() || text;
        score += 0.4;
      }
      if (lower.includes('gl√∂m inte att')) {
        result.typ = 'todo';
        const parts = lower.split('gl√∂m inte att');
        result.titel = (parts[1] || '').trim() || text;
        score += 0.35;
      }

      if (!result.typ && (lower.includes('m√•ste') || lower.includes('ska jag') || lower.includes('ska vi'))) {
        result.typ = 'todo';
        result.titel = text;
        score += 0.25;
      }

      result.s√§kerhet = Math.max(0, Math.min(1, score));
      return result;
    }

    parseBtn.addEventListener('click', () => {
      const text = inputText.value.trim();
      if (!text) {
        statusEl.textContent = 'Skriv eller prata in n√•got f√∂rst.';
        return;
      }
      const parsed = parseReminder(text);
      addLog(text, parsed);
      statusEl.textContent = 'Tolkat. Spara de som blev bra, ignorera resten.';
    });

    clearBtn.addEventListener('click', () => {
      inputText.value = '';
      statusEl.textContent = 'Rensat. Skriv eller prata in ny text.';
    });
  </script>
</body>
